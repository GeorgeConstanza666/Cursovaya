<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" alignment="center" spacing="10" fx:controller="com.example.kursovaya.ScheduleInfoController" style="-fx-background-color: #FFD700; -fx-padding: 20;">
    <TableView fx:id="schedulesTable">
        <columns>
            <TableColumn fx:id="ShiftIDColumn" text="Shift ID"/>
            <TableColumn fx:id="driverIDColumn" text="Driver ID"/>
            <TableColumn fx:id="vehicleIDColumn" text="Vehicle ID"/>
            <TableColumn fx:id="startTimeColumn" text="Start Time"/>
            <TableColumn fx:id="endTimeColumn" text="End Time"/>
            <TableColumn fx:id="statusColumn" text="Status"/>
        </columns>
    </TableView>
    <TextField fx:id="ShiftIDField" promptText="Shift ID"/>
    <Button fx:id="button" text="Видалити графік" onAction="#deleteSchedule"/>
</VBox>
