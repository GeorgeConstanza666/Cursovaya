<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" alignment="center" spacing="10" fx:controller="com.example.kursovaya.CreateOrderController" style="-fx-background-color: #FFD700; -fx-padding: 20;">
    <!-- Поля для введення даних про клієнта -->
    <TextField fx:id="nameField" promptText="Ім'я клієнта" />
    <TextField fx:id="phoneField" promptText="Телефонний номер" />
    <TextField fx:id="emailField" promptText="Email" />
    <Button text="Додати клієнта" onAction="#addClient"/>
</VBox>
